{
    "epochs": 40,
    "lr": 5e-5,
    "k": 2,
    "batch_size": 4,
    "test_batch_size": 1,
    "early_stop_threshold": 4,
    "pipeline": "finetune",
    "model_architect":"CLM",
    "communication":{
        "communication_protocol": "FedSGD",
        "iteration_per_aggregation": 1
    },
    "finetune_configs":{
        "name":"LoRA",
        "configs":{
            "inference_mode":false,  
            "r":16,  
            "lora_alpha":32, 
            "lora_dropout":0.1
        }
    },
    "dataset":{
        "dataset_name": "Dolly",
        "num_classes": 1,
        "use_prompt": 1
    },
    "tokenizer":{
        "padding": "max_length",
        "padding_type": "outside",
        "pad_token": "default",
        "truncation": "True",
        "max_length": 128,
        "padding_side": "left",
        "add_special_tokens": 1
    },
    "model_list":{
        "name": "Llama-2-7b-hf",
        "pretrained": 1,
        "model_type": "Llama",
        "max_sequence": 512,
        "kwargs_model_loading":{
            "device_map": "balanced_low_0"
        },
        "0": {
            "path": "/shared/model/Llama-2-7b-hf",
            "head":{
                
                "trainable": 1
            },
            "tail":{
                "trainable": 1
            }
        },
        "1": {
                "path": "/shared/model/Llama-2-7b-hf",
                "body":{
                    "trainable": 1
            }
        },
        "task":{
            "task_type": "CausalLM",
            "generation_config_dict":{
                "bos_token_id": 1,
                "do_sample": true,
                "eos_token_id": 2,
                "pad_token_id": 0,
                "temperature": 0.6,
                "max_new_tokens": 160,
                "top_p": 0.9
            },
            "max_new_tokens": 160
        },
        "vfl_model_slice_num": 3,
        "local_encoders_num": 2,
        "local_tail_encoders_num": 2
    }
    
}
