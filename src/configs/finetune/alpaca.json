{
    "epochs": 40,
    "lr": 1e-4,
    "k": 2,
    "batch_size": 4,
    "test_batch_size": 1,
    "early_stop_threshold":3,
    "pipeline": "finetune",
    "model_architect":"CLM",
    "communication":{
        "communication_protocol": "FedSGD",
        "iteration_per_aggregation": 1
    },
    "finetune_configs":{
        "name":"LoRA",
        "configs":{
            "r":8,
            "lora_alpha":32,
            "lora_dropout":0.1,
            "task_type":"CAUSAL_LM"
        }
    },
    "dataset":{
        "dataset_name": "Alpaca",
        "num_classes": 1,
        "use_prompt": 1
    },
    "tokenizer":{
        "padding": "max_length",
        "padding_type": "outside",
        "pad_token": "default",
        "truncation": "True",
        "max_length": 256,
        "padding_side": "right",
        "add_special_tokens": 1
    },
    "model_list":{
        "name": "gpt2",
        "pretrained": 1,
        "model_type": "GPT2",
        "max_sequence": 512,
        "kwargs_model_loading":{
            "device_map": "balanced_low_0"
        },
        "0": {
            "path": "/shared/model/gpt2",
            "head":{
                "trainable": 1
            },
            "tail":{
                "trainable": 1
            }
        },
        "1": {
                "path": "/shared/model/gpt2",
                "body":{
                    "trainable": 1
            }
        },
        "task":{
            "task_type": "CausalLM",
            "generation_config_dict":{
                "do_sample": true,
                "temperature" : 0.7, 
                "top_p" : 0.92, 
                "top_k" : 0,
                "early_stopping" : true,
                "max_new_tokens": 128
            },
            "max_new_tokens": 128
        },
        "vfl_model_slice_num": 3,
        "local_encoders_num": 2,
        "local_tail_encoders_num": 2
    }
    
}
