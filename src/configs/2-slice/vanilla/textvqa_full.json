{
    "epochs": 40,
    "lr": 0.00001,
    "k": 2,
    "batch_size": 8,
    "test_batch_size": 1,
    "early_stop_threshold": 1,
    "pipeline": "finetune",
    "finetune_configs":{
        "name":"Vanilla",
        "configs":{
          "r":4,  
          "lora_alpha":32, 
          "lora_dropout":0.1
        }
    },
    "model_architect":"MM",
    "communication":{
        "communication_protocol": "FedSGD",
        "iteration_per_aggregation": 1
    },
    "dataset": {
      "dataset_name": "TextVQA",
      "num_classes": 1
    },
    "tokenizer": {
      "padding": "max_length",
      "padding_type": "outside",
      "pad_token": "[PAD]",
      "truncation": "longest_first",
      "max_length": 160,
      "padding_side": "left",
      "add_special_tokens": 1
    },
    "model_list":{
        "name": "openbmb/MiniCPM-V-2",
        "pretrained": 1,
        "model_type": "MiniCPMV",
        "max_sequence": 512,
        "kwargs_model_loading":{
            "device_map": "auto"
        },
        "0": {
          "path": "/shared/model/openbmb/MiniCPM-V-2",
            "head":{
                "trainable": 1,
                "vision_processor_trainable": 0
            }
            
        },
        "1": {
          "path": "/shared/model/openbmb/MiniCPM-V-2",
            "tail":{
                "trainable": 1
            }
        },
        "task":{
            "task_type": "MultiModality",
            "generation_method":"chat",
            "generation_config_dict":{
                "max_new_tokens": 10,
                "sampling":false,
                "num_beams":3
            },
            "vis_processor":{
                "train":{
                    "name": "MiniCPM_Transform"
                },
                "eval":{
                    "name": "MiniCPM_Transform"
                }
            },
            "max_new_tokens": 10
        },
        "vfl_model_slice_num": 2,
        "local_encoders_num": 2,
        "local_tail_encoders_num": 0
    }
  }
  